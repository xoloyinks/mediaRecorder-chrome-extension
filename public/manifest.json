{
  "manifest_version": 3,
  "name": "HelpMeOut",
  "description": "Screen Recorder Extension",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_title": "HelpMeOut"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://www.google.com/*"
  ]
}



